if [[ $1 = "" ]]; then
	echo
	echo Items Left To Do
	echo ---------------
	more ~/files/todo.d
	echo
fi
if [[ $1 = "-c" ]]; then
	> ~/files/todo.d
	echo completed all tasks	
fi
if [[ $1 = "-a" ]]; then
	currentnum="$(wc -l ~/files/todo.d | awk '{ print $1 }')"
	newnum="$(($currentnum + 1))"
	createitem="$(echo $newnum:$2)"
	echo $createitem >> ~/files/todo.d
fi
if [[ $1 = "-d" ]]; then
	sed -i -e $2d ~/files/todo.d
fi
